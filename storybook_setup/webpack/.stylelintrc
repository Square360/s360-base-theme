{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "include",
        "use",
        "forward",
        "mixin",
        "extend",
        "if",
        "else",
        "each",
        "content",
        "import",
        "function",
        "return"
      ]
    }],
    "no-descending-specificity": null,
    "function-calc-no-invalid": null
  }
}
