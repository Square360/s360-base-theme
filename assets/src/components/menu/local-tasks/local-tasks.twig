{%
  set classes = [
    'menu',
    'menu--local-tasks'
  ]
%}
{% if menu_primary %}
  <h2 class="visually-hidden">{{ 'Primary tabs'|t }}</h2>
  <ul{{ attributes.addClass(classes) }}>{{ menu_primary }}</ul>
{% endif %}

{% if menu_secondary %}
  <h2 class="visually-hidden">{{ 'Secondary tabs'|t }}</h2>
  <ul{{ attributes }}>{{ menu_secondary }}</ul>
{% endif %}
