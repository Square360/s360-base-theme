{% macro menu_links(items, attributes, menu_level, menu_name, item_title) %}
  {% import _self as menus %}

  {% if items %}
    {% if menu_level == 0 %}
      {%
        set classes = [
          'menu',
          'menu--' ~ menu_name|clean_class,
          'menu--level-' ~ menu_level
        ]
      %}
      <ul{{ attributes.addClass(classes) }}>
    {% else %}
      {%
        set classes = [
          'menu',
          'menu--' ~ menu_name|clean_class,
          'menu--level-' ~ menu_level,
          'menu--submenu'
        ]
      %}
      <ul class="{{ classes|join(' ') }}">
    {% endif %}

    {% for item in items %}
      {% if item.url.isrouted and item.url.routeName == '<nolink>' %}
        {% set menu_item_type = 'nolink' %}
      {% elseif item.url.isrouted and item.url.routeName == '<button>' %}
        {% set menu_item_type = 'button' %}
      {% else %}
        {% set menu_item_type = 'link' %}
      {% endif %}

      {%
        set item_classes = [
          'menu__item',
          item.below ? 'menu__item--has-submenu' : '',
          item.in_active_trail ? 'menu__item--active' : '',
        ]
      %}
      <li{{ item.attributes.addClass(item_classes) }}>
        {% if menu_item_type == 'link' or menu_item_type == 'nolink' %}
          {% if item.in_active_trail %}
            {{ link(item.title, item.url, { 'aria-current': ['page'] }) }}
          {% else %}
            {{ link(item.title, item.url) }}
          {% endif %}
        {% else %}
          {% if item.in_active_trail %}
            <details data-menu="{{ item.title|clean_class }}" class="menu__details is-active"><summary class="menu__details-summary">{{ item.title }}</summary>
          {% else %}
            <details data-menu="{{ item.title|clean_class }}" class="menu__details"><summary class="menu__details-summary">{{ item.title }}</summary>
          {% endif %}
          <div class="menu__content-wrapper">
            <div class="menu__content-container">
        {% endif %}

        {% if item.content %}
          {% if item.content.field_content.0 %}
            <div class="menu__content">
              {{ item.content.field_content }}
            </div>
          {% endif %}
        {% endif %}

        {{ menus.menu_links(item.below, attributes, menu_level + 1, menu_name, item.title) }}

        {% if menu_item_type == 'button' %}
              {# .menu__content-container #}
              </div>
            {# .menu__content-wrapper #}
            </div>
          </details>
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}

