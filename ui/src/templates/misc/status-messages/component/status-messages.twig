{% for status_messages_type, messages in status_messages_message_list %}
  <div class="status-message" aria-label="{{ status_messages_type }}"{{ attributes|without('aria-label') }}>
    {% if status_messages_type == 'error' %}
      <div role="alert">
    {% endif %}
      {% if status_messages_type %}
        <h2 class="visually-hidden">{{ status_messages_type }}</h2>
      {% endif %}
      <ul class="status--message__list">
        {% for message in messages %}
          <li class="status-message__list-item status-message__list-item--{{ status_messages_type }}">
            {{ message }}
          </li>
        {% endfor %}
      </ul>
    {% if status_messages_type == 'error' %}
      </div>
    {% endif %}
  </div>
{% endfor %}
