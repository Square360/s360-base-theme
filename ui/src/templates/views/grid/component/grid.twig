{% if title %}
  <h2 class="view__heading">{{ title }}</h2>
{% endif %}

{% if options.alignment == 'horizontal' %}
  {% for row in items %}
    {% for column in row.content %}
      <div{{ column.attributes }}>
        {{- column.content -}}
      </div>
    {% endfor %}
  {% endfor %}
{% else %}
  {% for column in items %}
    {% for row in column.content %}
      <div{{ row.attributes }}>
        {{- row.content -}}
      </div>
    {% endfor %}
  {% endfor %}
{% endif %}
